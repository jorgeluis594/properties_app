<%= simple_form_for [:admin, property] do |f| %>
  <%= f.input :property_type, collection: Property::TYPES, prompt: "Select type" %>
  <%= f.input :price_cents, label: "Price", input_html: { min: 1 } %>
  <%= f.input :area, input_html: { min: 1 } %>
  <%= f.input :bedrooms, input_html: { min: 1 } %>
  <%= f.input :bathrooms, input_html: { min: 1 } %>
  <%= f.input :region %>
  <%= f.input :locality %>
  <%= f.input :images, as: :file, input_html: { multiple: true }, hint: "Minimum 3 images" %>
  <%= f.button :submit %>
<% end %>
